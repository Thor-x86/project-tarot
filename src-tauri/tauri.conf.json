{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Project Tarot",
	"version": "1.0.0",
	"identifier": "com.athaariq.project.tarot",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Project::Tarot",
				"width": 960,
				"height": 640,
				"minWidth": 640,
				"minHeight": 480,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		},
		"withGlobalTauri": true
	},
	"bundle": {
		"active": true,
		"resources": ["libopenblas.dll"],
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"appimage": {
				"bundleMediaFramework": false,
				"files": { "/usr/lib/libopenblas.so": "libopenblas.so" }
			},
			"deb": {
				"depends": ["libopenblas0"]
			},
			"rpm": {
				"epoch": 1,
				"release": "1.0.0",
				"depends": ["openblas"]
			}
		},
		"windows": {
			"webviewInstallMode": {
				"type": "embedBootstrapper"
			}
		}
	}
}
